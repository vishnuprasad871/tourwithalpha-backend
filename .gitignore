# Ignore everything by default
/*

# Allow app/code only
!/app/code/
!/app/code/**

# Ignore everything else in app/
app/etc/
app/design/
app/i18n/

# Allow pub root files needed
!/pub/index.php
!/pub/.htaccess

# Ignore pub generated/media
/pub/static/*
/pub/media/*
!/pub/static/.htaccess
!/pub/media/.htaccess

# Allow composer files
!/composer.json
!/composer.lock

# Git files
!/.gitignore

# Explicit ignores (safety)
.env
auth.json
vendor/
generated/
var/
setup/
dev/
lib/
bin/
phpserver/

# OS / IDE
.idea
.vscode
.DS_Store
*.log
